<h1>トップページ</h1>

<div class=new>
  <%= link_to '新規投稿', '/posts/new' %>
</div>

<% @posts.each do |post| %>
 <div class="post">
   <div class="post-data">
      投稿日時：<%= post.created_at %>
    </div>
    <div class="post-nickname">
      ニックネーム：<%= post.nickname %>
    </div>
    <div class="post-content">
      出身地：<%= post.content %>
    </div>
    <div class="post-comment">
      コメント：<%= post.comment %>
    </div>
  </div>
<% end %>